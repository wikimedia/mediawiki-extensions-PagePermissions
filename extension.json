{
	"name": "PagePermissions",
	"version": "1.0",
	"author": [
		"Sanjay Thiyagarajan"
	],
	"descriptionmsg": "pagepermissions-desc",
	"license-name": "GPL-2.0-or-later",
	"type": "other",
	"load_composer_autoloader": true,
